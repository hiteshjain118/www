{
  "name": "coralbricks",
  "version": "1.0.0",
  "description": "Monorepo for CoralBricks",
  "private": true,

  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:chat\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:chat": "cd chat_js && npm run dev",
    "build": "npm run build:backend && npm run build:frontend && npm run build:chat",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "build:chat": "cd chat_js && npm run build",
    "start": "concurrently \"npm run start:backend\" \"npm run start:chat\"",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npm run preview",
    "start:chat": "cd chat_js && npm start",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install && cd ../chat_js && npm install && cd ../common_js && npm install",
    "vercel-build": "npm run install:all && npm run build",
    "db:generate": "cd backend && npm run db:generate",
    "db:push": "cd backend && npm run db:push",
    "db:migrate": "cd backend && npm run db:migrate",
    "db:studio": "cd backend && npm run db:studio",
    "lint": "npm run lint:backend && npm run lint:frontend && npm run lint:chat",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:chat": "cd chat_js && npm run test",
    "type-check": "npm run type-check:backend && npm run type-check:chat",
    "type-check:backend": "cd backend && npx tsc --noEmit",
    "type-check:chat": "cd chat_js && npm run type-check",
    "docker:build:backend": "cd backend && docker build -t coralbricks-backend .",
    "docker:build:chat": "cd chat_js && docker build -t coralbricks-chat .",
    "docker:build:chat:dev": "cd chat_js && docker build -f Dockerfile.dev -t coralbricks-chat:dev .",
    "docker:run:backend": "docker run -p 3001:3001 --env-file backend/.env coralbricks-backend",
    "docker:run:chat": "docker run -p 3004:3004 --env-file chat_js/.env coralbricks-chat",
    "docker:run:chat:dev": "docker run -p 3004:3004 --env-file chat_js/.env coralbricks-chat:dev",
    "docker:compose:build": "docker-compose build",
    "docker:compose:up": "docker-compose up",
    "docker:compose:up:detached": "docker-compose up -d",
    "docker:compose:up:dev": "CHAT_JS_DOCKERFILE=Dockerfile.dev docker-compose up",
    "docker:compose:down": "docker-compose down",
    "docker:compose:logs": "docker-compose logs -f",
    "docker:compose:restart": "docker-compose restart",
    "docker:validate": "./scripts/validate-docker.sh"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
