{
  "name": "chat-js",
  "version": "1.0.0",
  "description": "Real-time WebSocket chat server with QuickBooks integration",
  "main": "server.ts",
  "scripts": {
    "start": "ts-node --transpile-only server.ts",
    "dev": "ts-node --transpile-only server.ts",
    "dev:watch": "nodemon --exec \"ts-node --transpile-only\" server.ts",
    "debug": "ts-node --inspect --transpile-only server.ts",
    "debug:watch": "nodemon --inspect --exec \"ts-node --transpile-only\" server.ts",
    "debug:ts": "nodemon --inspect --exec \"tsc && node server.js\"",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "demo": "ts-node src/examples/qb-server-demo.ts",
    "demo:build": "npm run build && node dist/examples/qb-server-demo.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "websocket",
    "chat",
    "real-time",
    "nodejs",
    "typescript",
    "quickbooks"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.11.0",
    "coralbricks-common": "file:../common_js",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "openai": "^5.15.0",
    "uuid": "^9.0.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.0",
    "@types/express": "^4.17.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@types/uuid": "^9.0.0",
    "@types/ws": "^8.5.0",
    "concurrently": "^9.2.0",
    "jest": "^30.1.1",
    "nodemon": "^3.1.10",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.0"
  }
}
